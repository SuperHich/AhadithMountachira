<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_default"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/RelativeLayout"
            android:layout_width="158dp"
            android:layout_height="509dp">

            <LinearLayout
                android:id="@+id/centerlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/centerlayoutt"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/centerlayouttt"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/raslnabtn"
                        android:layout_width="65dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="5sp"
                        android:background="@android:color/transparent"
                        android:layout_weight="0.59" />

                    <Button
                        android:id="@+id/browsebtn"
                        android:layout_width="65dp"
                        android:layout_height="70dp"
                        android:layout_alignBaseline="@+id/aboutbtn"
                        android:layout_below="@+id/aboutbtn"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/aboutbtn"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="74dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.32">

                <Button
                    android:id="@+id/aboutbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_weight="0.60">

                <Button
                    android:id="@+id/addbtn"
                    android:layout_width="114dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:weightSum="1" >

                <Button
                    android:id="@+id/searchbtn"
                    android:layout_width="fill_parent"
                    android:layout_height="124dp"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <Button
                    android:id="@+id/sharebtn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="70dp"
                    android:background="@android:color/transparent" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:weightSum="1">

        <Button
            android:id="@+id/homesearchbtn"
            android:layout_width="40dp"
            android:layout_height="63dp"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent" />

        <EditText
            android:id="@+id/home_search_txt"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_weight="0.5"
            android:imeOptions="actionSearch"
            android:layout_marginLeft="10dp">

            <requestFocus />
        </EditText>
    </LinearLayout>

</LinearLayout>